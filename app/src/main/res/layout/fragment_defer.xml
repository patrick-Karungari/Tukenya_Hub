<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="false"
    android:backgroundTint="@color/colorSplashText"
    android:paddingTop="50dp"
    android:textAlignment="center"
    tools:context=".Fragments.DeferFragment">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:text="Sem/Term Of Deferment *"
        android:textAlignment="viewEnd"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/textView9"
        android:elevation="30dp"
        app:cardBackgroundColor="@color/colorSplashText"
        app:cardElevation="20dp">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/colorSplashText"
            android:elevation="30dp"
            android:entries="@array/term_of_deferment"
            android:spinnerMode="dropdown"
            android:textAlignment="center" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/textView9"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:text="Current Year Of Study * "
        android:textAlignment="viewEnd"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardview9"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/textView10"
        android:layout_toRightOf="@id/textView10"
        android:elevation="30dp"
        app:cardBackgroundColor="@color/colorSplashText"
        app:cardElevation="20dp">

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/colorSplashText"
            android:elevation="30dp"
            android:spinnerMode="dialog"
            android:textAlignment="center" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/textView10"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:text="Current Sem/Term Of Study "
        android:textAlignment="viewEnd"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardview10"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/textView9"
        android:layout_toRightOf="@id/textView10"
        android:elevation="30dp"
        app:cardBackgroundColor="@color/colorSplashText"
        app:cardElevation="20dp">

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/colorSplashText"
            android:elevation="30dp"
            android:spinnerMode="dropdown"
            android:textAlignment="center" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/textView11"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:text="Expected Resume Date * "
        android:textAlignment="viewEnd"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview12"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/cardview11"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/textView12"
        android:elevation="30dp"
        app:cardElevation="20dp">

        <EditText
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorSplashText"
            android:ems="10"
            android:enabled="true"
            android:hint="RESUMPTION DATE"
            android:inputType="date"
            android:paddingStart="8dp"
            android:textAlignment="center"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/textView12"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="Reasons for Deferment *"
        android:textAlignment="viewEnd"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardview12"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/textView12"
        android:background="@color/colorSplashText"
        android:ems="10"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:maxLines="6"
        android:padding="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="2dp"
        android:scrollbars="vertical"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/design_default_color_error"
        android:text="Submit Deferment Request"
        android:textSize="18sp"
        app:cornerRadius="10dp" />


</RelativeLayout>